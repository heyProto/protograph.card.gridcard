{
  "$schema": "http://json-schema.org/draft-04/schema#", 
  "definitions": {}, 
  "id": "http://example.com/example.json", 
  "properties": {
    "data": {
      "id": "/properties/data", 
      "properties": {
        "url": {
          "id": "/properties/data/properties/url", 
          "title": "Story URL", 
          "type": "string"
        },
        "headline":{
          "title": "Headline", 
          "type": "string",
          "min":50,
          "max": 90
        },
        "byline":{
          "title": "By line", 
          "type": "string",
          "min":3,
          "max": 25
        },
        "publishedat":{
          "title": "Publish Date", 
          "type": "string",
          "format":"date-time"
        },
        "series":{
          "title": "Series", 
          "type": "string",
          "min":3,
          "max": 15
        },
        "genre":{
          "title": "Genre", 
          "type": "string",
          "min":3,
          "max": 15
        },
        "subgenre":{
          "title": "Sub-Genre", 
          "type": "string",
          "min":3,
          "max": 15
        },
        "sponsored":{
          "title":"Is it sponsored?",
          "type":"boolean"
        },
        "interactive":{
          "title":"Does it have an interactive?",
          "type":"boolean"
        },
        "summary":{
          "title": "Summary", 
          "type": "string",
          "min":100,
          "max": 220
        },
        "imageurl":{
          "title":"Image URL",
          "type":"string",
          "format":"uri"
        },
        "focus":{
          "title":"Is the image vertically focused or horizontally focused?",
          "type":"string",
          "enum":["h","v"],
          "enumNames":["Vertically focused","Horizontally focused"],
          "default":"h"
        }
      }, 
      "type": "object",
      "required": [
        "url","headline","byline","publishedat"
      ]
    }
  }, 
  "type": "object"
}